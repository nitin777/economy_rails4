<div class="loginfom heartform" data-no-turbolink>

    <% if flash[:notice_profile] %>
      <div class="alert-success" id="notice" style="text-align:center;"><h3><%= flash[:notice_profile] %></h3></div>
      <% flash[:notice_profile] = nil %>
    <% end %>

    <div class="well sidebar-nav">
      <ul class="nav nav-tabs">
        <li id="stepform1" class="active">
          <%= link_to t("general.profile"),"#profile", :id => "stepform1" %>
        </li>        
        <li id="stepform2">
          <%= link_to t("general.positions"),"#positions", :id => "stepform2" %>
        </li>
        <li id="stepform3">
          <%= link_to t("general.skills"),"#skills", :id => "stepform3" %>
        </li>       
        <li id="stepform4">
          <%= link_to t("general.educations"),"#educations", :id => "stepform4" %>
        </li>
        <li id="stepform5">
          <%= link_to t("general.languages"),"#languages", :id => "stepform5" %>
        </li>        
      </ul>
      <span class="p_header_links">
        <%= link_to t("general.download_as_csv"), cv_xml_path %> | 
        <%= link_to t("general.refresh_from_linkeding"), "/p/#{current_user.user_name}?refresh=true", data: { confirm: t("general.import_data_from_linkedin") } %>
      </span>  
    </div>
      
    <div id="stepcontent1" style="display:block;">    
      <%= render "fronts/profile/profile" %>
    </div>    
    <div id="stepcontent2" style="display:none;">    
      <%= render "fronts/profile/positions" %>
    </div>
    <div id="stepcontent3" style="display:none;">    
      <%= render "fronts/profile/skills" %>
    </div>
    <div id="stepcontent4" style="display:none;">    
      <%= render "fronts/profile/educations" %>
    </div>
    <div id="stepcontent5" style="display:none;">    
      <%= render "fronts/profile/languages" %>
    </div>    
  
  <div class="cl"></div>
</div>

<script type="text/javascript">
  $('#stepform1, #stepform11').click(function() {
    $('#stepcontent2, #stepcontent3, #stepcontent4, #stepcontent5').hide();
    $('#stepform2, #stepform3, #stepform4, #stepform5').removeClass('active');
    $('#stepcontent1').show();
    $('#stepform1').addClass('active');
  });
  $('#stepform2, #stepform22').click(function() {
    $('#stepcontent1, #stepcontent3, #stepcontent4, #stepcontent5').hide();
    $('#stepform1, #stepform3, #stepform4, #stepform5').removeClass('active');
    $('#stepcontent2').show();
    $('#stepform2').addClass('active');
  });
  $('#stepform3, #stepform33').click(function() {
    $('#stepcontent2, #stepcontent1, #stepcontent4, #stepcontent5').hide();
    $('#stepform2, #stepform1, #stepform4, #stepform5').removeClass('active');
    $('#stepcontent3').show();
    $('#stepform3').addClass('active');
  });
  $('#stepform4, #stepform44, #stepform66').click(function() {
    $('#stepcontent2, #stepcontent3, #stepcontent1, #stepcontent5').hide();
    $('#stepform2, #stepform3, #stepform1, #stepform5').removeClass('active');
    $('#stepcontent4').show();
    $('#stepform4').addClass('active');
  });
  $('#stepform5, #stepform55').click(function() {
    $('#stepcontent2, #stepcontent3, #stepcontent1, #stepcontent4').hide();
    $('#stepform2, #stepform3, #stepform1, #stepform4').removeClass('active');
    $('#stepcontent5').show();
    $('#stepform5').addClass('active');
  });  
</script>
