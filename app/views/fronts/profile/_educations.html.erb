<table class="table">
    <tr>
      <td>
        <div style="float:left;width:100%;">
          <% @user.cv.cv_educations.load.each do |row| %>
            <h3><%= row.degree %></h3>
            <p><%= row.field_of_study %></p>  
            <h4><%= row.school %></h4>
            <% if row.description %>
              <p><%= row.description %></p>
            <% end %>
            <% if row.grade %>
              <p><%= row.grade %></p>
            <% end %>  
            <p><strong><%= t("general.from_year") %>: </strong><%= row.from_year %></p>
            <p><strong><%= t("general.to_year") %>: </strong><%= row.to_year %></p>
            <hr />
          <% end %>
        </div>
      </td>
    </tr>
</table>
<p style="float:right;">
  <%= link_to t("general.back"), "#", :class => "btn btn-info", :id => "stepform33" %>
  <%= link_to t("general.next"), "#", :class => "btn btn-info", :id => "stepform55" %>
</p>