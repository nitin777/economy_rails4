<h3><%= t("general.this_people_read_your_cv") %></h3>
<span class="invite_btn"><%= link_to t("general.invite"), invite_path, :class => "btn btn-info" %></span>
<div class="">

  <% if @feedbacks.size > 0 %>
  
    <div id='chart'></div>
    <%= render_chart(@user_cv_chart, 'chart') %>  
    
    <table class="table table-condensed" width="100%">
      
     <thead>
       <tr><td>&nbsp;</td></tr> 
      <tr>
        <td width="10%"></td>
        <td width="20%"><%= t("general.invited_date")%></td>
        <td width="20%"><%= t("general.mail_sent_to")%></td>
        <td width="20%"><%= t("general.mail_read_on")%></td>
        <td width="30%"><%= t("general.feedback") %></td>
      </tr>
     <thead>   
      <tbody>
          <% arr_host_name = [] %>
          <% @feedbacks.load.order('host_name').each do |o_row| %>
            <% unless o_row.invited.email.nil? or o_row.invited.email.empty? %>
              <tr>
                <td>
                  <% unless arr_host_name.include?(o_row.host_name) %>
                    <b><%= o_row.host_name.capitalize %>:</b> 
                  <% end %>
                  <% arr_host_name << o_row.host_name %>
                </td>
                <td><b><%= o_row.created_at.to_s(:default_date) if o_row.created_at %></b></td>
                <td><%= o_row.invited.email %></td>
                <td>
                <% o_row.readlogs.each do |r| %>
                  <b><%= r.created_at.to_s(:default_date) if r.created_at %></b><br />
                <% end %>
                </td>
                <td><p>On <%= Date.parse(o_row.feedback_date.to_s).strftime('%e-%b-%Y') if o_row.feedback_date %> <%= o_row.invited.email %> said: <%= o_row.feedback.blank? ? '--' : o_row.feedback %></p></td>
              </tr>
             <% else %>
              <tr>
                <td>
                  <b><%= o_row.readlogs.first.ip_add if o_row.readlogs.first %></b>
                </td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td><p>On <%= Date.parse(o_row.feedback_date.to_s).strftime('%e-%b-%Y') if o_row.feedback_date %> <%= o_row.invited.email %> said: <%= o_row.feedback.blank? ? '--' : o_row.feedback %></p></td>
              </tr>               
             <% end %> 
          <% end %>
       </tbody>
    </table>
  <% else %>
    <b><%= t("general.please_invite_and_send_cv") %></b>
  <% end %>
</div>
